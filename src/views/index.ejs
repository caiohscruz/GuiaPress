<!-- Inclui head -->
<%- include("./partials/header.ejs") %>

<body>
    
    <%- include("./partials/home-navbar.ejs") %>

    
    <div class="container">
        
        <div class="jumbotron">
            <h1 class="display-4">Bem vindo!</h1>
            <p class="lead">Segundo projeto do curso Formação em NodeJS</p>
            <hr class="my-4">
            <p>O segundo projeto consiste na construção de um blog</p>
            <p class="lead">
                <a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a>
            </p>
        </div>
        
        <% articles.forEach(article => { %>

        <div class="card">
            <div class="card-header">
                <h5><%= article.title %></h5>
            </div>
            <div class="card-body">
                <a class="btn btn-success" href="/<%= article.slug %>">Ler artigo</a>
            </div>
        </div>

        <% }) %>

    </div>
</body>
<!-- Inclui footer -->
<%- include("./partials/footer.ejs") %>