<!-- Inclui head -->
<%- include("./partials/header.ejs") %>

<body>

    <%- include("./partials/home-navbar.ejs") %>


    <div class="container">

        <div class="jumbotron">
            <h1 class="display-4">Bem vindo!</h1>
            <p class="lead">Segundo projeto do curso Formação em NodeJS</p>
            <hr class="my-4">
            <p>O segundo projeto consiste na construção de um blog. Clique em saiba mais para mais informações</p>
            <p class="lead">
                <a class="btn btn-primary btn-lg" href="/about" role="button">Saiba mais</a>
            </p>
        </div>

        <% result.articles.rows.forEach(article => { %>

        <div class="card">
            <div class="card-header">
                <h5><%= article.title %></h5>
                <p>Autor: <%= article.user.username %></p>
                <p>Categoria: <%= article.category.title %></p>
            </div>
            <div class="card-body">
                <a class="btn btn-success" href="/read/<%= article.slug %>">Ler artigo</a>
            </div>
        </div>

        <% }) %>

        <%- include("./partials/pagination.ejs") %>

    </div>
</body>
<!-- Inclui footer -->
<%- include("./partials/footer.ejs") %>