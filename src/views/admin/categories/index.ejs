<!-- Inclui head -->
<%- include("../../partials/header.ejs") %>

<body>

    <%- include("../../partials/navbar.ejs") %>

    <div class="container">

        <hr>
        <h2>Categorias</h2>
        <a class="btn btn-success" href="/admin/categories/new">Criar nova categoria</a>
        <hr>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Título</th>
                    <th>Slug</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% categories.forEach(category => { %>

                <tr>
                    <th class="align-middle"><%= category.id %></th>
                    <th class="align-middle"><%= category.title %></th>
                    <th class="align-middle"><%= category.slug %></th>
                    <th class="align-middle" style="vertical-align: middle;">
                        <form method="POST" action="/categories/edit" style="display: inline;">
                            <input type="hidden" name="id" value="<%= category.id %>">
                            <button class="btn btn-warning">Editar</button>
                        </form>

                        <form method="POST" action="/categories/delete" style="display: inline;" onsubmit="confirmDeletion(event, this)">
                            <input type="hidden" name="id" value="<%= category.id %>">
                            <button class="btn btn-danger">Deletar</button>
                        </form>
                    </th>
                </tr>

                <% }) %>

            </tbody>
        </table>

    </div>

</body>

<!-- Inclui head -->
<%- include("../../partials/footer.ejs") %>
<script>
function confirmDeletion(event, form){
    event.preventDefault()
    var decision = confirm("Você quer realmente deletar essa categoria?")
    if (decision){
        form.submit()
    }
}

</script>